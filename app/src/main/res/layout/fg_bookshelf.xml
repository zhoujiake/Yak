<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">

   <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/shelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shelf_b1"
        android:padding="35sp">

    <ImageView
        android:id="@+id/book_1"
        android:layout_width="110sp"
        android:layout_height="150sp"
        android:background="@drawable/a"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/book_2"
        />

        <ImageView
            android:id="@+id/book_2"
            android:layout_width="110sp"
            android:layout_height="150sp"
            android:background="@drawable/a"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/book_3"
            android:layout_width="110sp"
            android:layout_height="150sp"
            android:background="@drawable/a"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/book_2"
            />

    </RelativeLayout>

           <!--numColumns设置每行显示多少个-->
           <com.zjk.yak.ui.widget.SourcePanel
               android:id="@+id/grid_photo"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:focusable="false"
               android:numColumns="3" />


</LinearLayout>
</ScrollView>